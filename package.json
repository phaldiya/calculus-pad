{
  "name": "calculus-pad",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run tests/smoke/",
    "test:deep": "vitest run tests/deep/",
    "test:coverage": "vitest run --coverage",
    "build:extension": "vite build --config vite.config.extension.ts",
    "verify": "vitest run && playwright test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:functional": "playwright test --project=functional",
    "e2e:visual": "playwright test --project=visual-desktop --project=visual-tablet --project=visual-mobile",
    "e2e:update-snapshots": "playwright test --project=visual-desktop --project=visual-tablet --project=visual-mobile --update-snapshots",
    "e2e:docker": "docker compose -f docker-compose.playwright.yml run --rm e2e",
    "e2e:docker:update-snapshots": "docker compose -f docker-compose.playwright.yml run --rm e2e-update-snapshots",
    "extension:icons": "bun run scripts/generate-icons.ts",
    "extension:zip": "bun run scripts/package-extension.ts"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "katex": "^0.16.28",
    "mathjs": "^15.1.0",
    "plotly.js-dist-min": "^3.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/katex": "^0.16.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.32.0",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "puppeteer-core": "^24.37.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
